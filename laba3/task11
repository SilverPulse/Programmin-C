#include <stdio.h>
int main (){
int k=0,m=1,n;
printf("Введите значение n: ");// принимает на  вход число n
scanf("%d", &n);
while  (m<=n){
	k++; //k увеличивается на единицу при каждом шаге цикла  при условии  на след. строчке
	m=m*2;// переменная m последовательно умножается на 2 до тех пор,пока она не станет больше n
}
printf("%d\n",k-1);// вывод k-1 является количество полных удовлетворений числа 1, чтобы результат оставался меньше или равен  n
}
// по итогу вводим число, а затем получаем максимальную степень двоки, в которой двойка входит в наше заданное число)
